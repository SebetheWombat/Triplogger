
<div class = "container">
	<%= form_for @my_trip, html: {id: "js-trip-form"} do |f| %>
		<h3>Trip Details</h3>
		<div class="form-group row">
			<%= f.label :location, class: "col-md-2 col-form-label" %>
			<div class="col-md-10">
	  			<%= f.text_field :location, id: 'location', class: 'form-control' %>
	  		</div>
	  	</div>

	  	<!-- <div class="form-group row">
	  		<%= f.label :coordinates, class: "col-md-2 col-form-label" %>
	  		<div class="col-md-5"> -->
	  			<%= f.hidden_field :lat, id: 'form-lat', class: 'form-control', step: :any %>
	  <!-- 		</div> -->
	  		
	  <!-- 		<div class="col-md-5"> -->
	  			<%= f.hidden_field :long, id: 'form-long', class: 'form-control', step: :any %>
	<!--   		</div>
	  	</div> -->

	  	<div class="form-group row">
	  		
	  		<%= f.label :rating, class: "col-md-2 col-form-label" %>
	  		
	  		<div class="col-md-10">
	  		<%= f.radio_button :rating, 1, class: 'rating' %>
	  		<%= f.label :rating_1, '1', class: 'btn btn-info col-md-2' %>
	  		<%= f.radio_button :rating, 2, class: 'rating' %>
	  		<%= f.label :rating_2, '2', class: 'btn btn-info col-md-2' %>
	  		<%= f.radio_button :rating, 3, class: 'rating' %>
	  		<%= f.label :rating_3, '3', class: 'btn btn-info col-md-2' %>
	  		<%= f.radio_button :rating, 4, class: 'rating' %>
	  		<%= f.label :rating_4, '4', class: 'btn btn-info col-md-2' %>
	  		<%= f.radio_button :rating, 5, class: 'rating' %>
			<%= f.label :rating_5, '5', class: 'btn btn-info col-md-2' %>
			
			</div>
	  	</div>

	  	<div class="form-group row">
	  		<%= f.label :dates, class: "col-md-2 col-form-label" %>
	  		<div class="col-md-5">
	  			<%= f.date_field :start_date, id: 'start_date', class: 'form-control' %>
	  		</div>
	  		
	  		<div class="col-md-5">
	  			<%= f.date_field :end_date, id: 'end_date', class: 'form-control' %>
	  		</div>
	  	</div>

	  	<div class="form-group row">
	  		<%= f.label :summary, class: "col-md-2 col-form-label" %>
	  		<div class="col-md-10">
	  			<%= f.text_area :summary, class: 'form-control', id: "form-summary" %>
	  		</div>
	  	</div>

	  	<%= f.button %>
	<% end %>
	<div id="js-activities-form" class="hide">
		<div class="left" id="addactivity">
			<h3 id="activity-header">Go ahead! Add some activities!</h3>
			<div>
				<p class="js-actlink" >+ Add Activity</p>
				<div class= "actform hide" data-category="activity">
					<%= render "activityform" %>
				</div>
			</div>
			<div>
				<p class = "js-actlink" >+ Add Cultural</p>
				<div class = "actform hide" data-category="cultural">
					<%= render "activityform" %>
				</div>
			</div>
			<div>
				<p class = "js-actlink" >+ Add Music</p>
				<div class = "actform hide" data-category="music">
					<%= render "activityform" %>
				</div>
			</div>
			<div>
				<p class = "js-actlink" >+ Add Adventure</p>
				<div class = "actform hide" data-category="adventure">
					<%= render "activityform" %>
				</div>
			</div>
			<div>
				<p class = "js-actlink" >+ Add Nature</p>
				<div class = "actform hide" data-category="nature">
					<%= render "activityform" %>
				</div>
			</div>
			<div>
				<p class = "js-actlink" >+ Add Educational</p>
				<div class = "actform hide" data-category="education">
					<%= render "activityform" %>
				</div>
			</div>
			<div>
				<p class = "js-actlink">+ Add Photos</p>
				<div class = "hide">
					<%= render "photoform" %>
				</div>
			</div>
			<% if Trip.last != nil %>
				<%= link_to "I'M DONE!", trip_path(Trip.last.id + 1), class: "btn btn-primary"%>
			<%else%>
				<%= link_to "I'M DONE!", trip_path(1), class: "btn btn-primary" %>
			<%end%>
		</div>
		<div class="left" id="preview">
			
			<div id="tripPreview">
				<h5>Trip Details</h5>

			</div>
			<div id="photoPreview">
				<h5>Photos</h5>
				<div id="photoPreviewThumbs"></div>
			</div>
			<div id="activityPreview">
				<h5>Activities</h5>
			</div>
			
		</div>
	</div>
	
</div>

