<%= form_for @trip do |f| %>
	<div class = "container">
		<h3>Trip Details</h3>
		<div>
			<%= f.label :location %><br>
	  		<%= f.text_field :location, id: 'location' %>
	  	</div>

	  	<div>
	  		<%= f.label :rating %><br>
	  		<%= f.number_field :rating %>
	  	</div>

	  	<div>
	  		<%= f.label :start_date %><br>
	  		<%= f.date_field :start_date %>
	  	</div>

	  	<div>
	  		<%= f.label :end_date %><br>
	  		<%= f.date_field :end_date %>
	  	</div>

	  	<div>
	  		<%= f.label :summary %><br>
	  		<%= f.text_area :summary %>
	  	</div>
	</div>
<% end %>